generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Affiliate {
  id               String    @id @default(cuid())
  name             String
  email            String    @unique
  slug             String?   @unique // pretty referral link e.g. /ref/sarabeth
  couponCode       String?   // WooCommerce coupon e.g. SARABETH15 â€” credit via link OR coupon
  storeCredit      Float     @default(0) // balance for use on store (admin can add)
  tier             String    @default("silver")
  status           String    @default("active") // active | pending | rejected
  state            String?
  referralCode     String?   @unique
  parentId         String?
  phone            String?
  socialHandle     String?
  howDidYouHear    String?
  marketingChannel String?
  audienceSize     String?
  whyJoin         String?
  tipaltiPayeeId   String?   // Tipalti idap (we use affiliate id as idap)
  tipaltiStatus    String?   // pending | active | blocked
  notes            String?   // private admin notes, never shown to affiliate
  archivedAt       DateTime? // null = active; set when archived (hidden from list, no new commissions)
  deletedAt        DateTime? // null = not deleted; set when soft-deleted (excluded from all queries)
  instagramUrl     String?
  tiktokUrl        String?
  youtubeUrl       String?
  websiteUrl       String?
  mailingAddress   String?
  joinedAt         DateTime? @default(now())
  historicalConversions       Int?    @default(0) // legacy; prefer historical* below
  historicalGrossConversions  Int?    @default(0)
  historicalApprovedConversions Int?  @default(0)
  historicalRejectedConversions Int?  @default(0)
  historicalPendingConversions Int?   @default(0)
  historicalRevenue          Float?  @default(0)
  historicalPayout           Float?  @default(0)
  importSource               String? // e.g. "csv-import", "tapaffiliate"
  parent           Affiliate?   @relation("AffiliateTree", fields: [parentId], references: [id])
  children         Affiliate[]  @relation("AffiliateTree")
  clicks           Click[]
  conversions      Conversion[]
  payouts          Payout[]
  slugHistory      SlugHistory[]
  generatedLinks   GeneratedLink[]
  fraudFlags       FraudFlag[]
  createdAt        DateTime  @default(now())
}

model Click {
  id          String    @id @default(cuid())
  affiliateId String
  affiliate   Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
  ip          String?
  userAgent   String?
  createdAt   DateTime  @default(now())
}

model Conversion {
  id            String    @id @default(cuid())
  affiliateId   String
  affiliate     Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
  amount        Float
  status        String    @default("pending") // pending | approved | paid
  product       String?
  note          String?
  orderId       String?   @unique // WooCommerce order ID when source is woocommerce
  orderNumber   String?   // display number e.g. 4521
  orderStatus   String?   // processing | completed | refunded
  orderItems    Json?     // [{ name, quantity, total }] from WooCommerce
  customerName  String?   // first name only
  customerCity  String?   // city only
  source        String?   // "woocommerce" | "manual" etc.
  paidAt        DateTime?
  createdAt     DateTime  @default(now())
}

model Payout {
  id              String    @id @default(cuid())
  affiliateId     String
  affiliate       Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
  amount          Float
  method          String    @default("other") // paypal | venmo_zelle | ach | tipalti | other
  note            String?
  tipaltiRefCode  String?   // Tipalti payment ref for webhook matching
  payoutStatus    String?   @default("pending") // pending | confirmed | failed (for Tipalti)
  paidAt          DateTime  @default(now())
  createdAt       DateTime  @default(now())
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model ActivityLog {
  id          String    @id @default(cuid())
  type        String    // conversion | affiliate_approved | tier_upgrade | payout
  message     String
  affiliateId String?
  createdAt   DateTime  @default(now())
}

model Alert {
  id          String    @id @default(cuid())
  affiliateId String
  type        String    // click_spike | ip_abuse
  message     String
  dismissed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
}

model ImportLog {
  id             String   @id @default(cuid())
  method         String   // csv | paste | tapaffiliate | goaffpro | tune
  totalCount     Int
  importedCount  Int
  skippedCount   Int
  errorCount     Int
  details        Json?    // optional details (e.g. errors)
  createdAt      DateTime @default(now())
}

model SlugHistory {
  id          String   @id @default(cuid())
  affiliateId String
  oldSlug     String
  changedAt   DateTime @default(now())
  affiliate   Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
}

model Announcement {
  id          String    @id @default(cuid())
  title       String
  content     String
  priority    String    @default("normal") // normal | important | urgent
  pinned      Boolean   @default(false)
  publishedAt DateTime  @default(now())
  expiresAt   DateTime?
  createdBy   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model GeneratedLink {
  id          String   @id @default(cuid())
  affiliateId String
  originalUrl String
  trackedUrl  String
  createdAt   DateTime @default(now())
  affiliate   Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
}

model FraudFlag {
  id           String    @id @default(cuid())
  affiliateId  String
  type         String    // duplicate-ip | self-referral | high-click-ratio | suspicious-pattern | rapid-clicks
  description  String
  severity     String    @default("medium") // low | medium | high
  resolved     Boolean   @default(false)
  resolvedBy   String?
  resolvedAt   DateTime?
  resolvedNote String?
  createdAt    DateTime  @default(now())
  affiliate    Affiliate @relation(fields: [affiliateId], references: [id], onDelete: Cascade)
}

model MessageTemplate {
  id        String   @id @default(cuid())
  title     String
  category  String   // email | social-instagram | social-facebook | social-tiktok | social-twitter | text-message | other
  subject   String?  // for email templates
  body      String
  sortOrder Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
